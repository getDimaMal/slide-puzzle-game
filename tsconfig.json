{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  "include": ["src/**/*", "src/typings.d.ts"],
  "exclude": ["/node_modules/", "/dist/", "/coverage/"]
}
